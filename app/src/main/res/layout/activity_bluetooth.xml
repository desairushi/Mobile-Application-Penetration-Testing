<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_view_bluetooth_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bluetooth is disabled"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_toggle_bluetooth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="toggleBluetooth"
            android:text="Toggle Bluetooth" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="discoverDevices"
            android:text="Discover Devices" />

    </LinearLayout>

    <ListView
        android:id="@+id/list_view_devices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
